
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false
  },
  "include": ["src/server/server.js"],
  "exclude": [
    "node_modules", 
    "dist", 
    "src/server/recipes/dto/**/*", 
    "src/server/recipes/entities/**/*",
    "src/server/recipes/recipes.controller.ts",
    "src/server/recipes/recipes.service.ts",
    "src/server/recipes/recipes.module.ts",
    "src/server/main.ts",
    "src/server/app.module.ts"
  ]
}
